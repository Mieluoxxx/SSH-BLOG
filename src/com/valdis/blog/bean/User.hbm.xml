<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.valdis.blog.bean.User" table="user" schema="j2eetest">
        <id name="username">
            <column name="username" sql-type="varchar(45)" length="45"/>
        </id>
        <property name="password">
            <column name="password" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="type">
            <column name="type" sql-type="varchar(45)" length="45"/>
        </property>
    </class>
</hibernate-mapping>